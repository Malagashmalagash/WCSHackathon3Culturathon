{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5 py-5">
        <div class="row text-center">
            <div class="col">

            </div>
        </div>

        <div class="row text-center">
            <div class="col-7">
                <h2>Description</h2>
                <p>
                    {{ artWork.description }}
                    <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button"
                       aria-expanded="false" aria-controls="collapseExample">
                        Voir plus
                    </a>
                </p>
                <div class="collapse" id="collapseExample">
                    <div class="card card-body">
                        {{ artWork.longdescription }}
                        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample"
                                aria-expanded="false" aria-controls="collapseExample">
                            Button with data-target
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-5">

                <img class="w-75"
                     src="https://storage.gra1.cloud.ovh.net/v1/AUTH_10e1a9235c63431c95e5b84a247830db/prod/artwork/42673_1_l.jpg">
                <div class="col mx-auto my-3">
                </div>
                <p><i class="fas fa-clone m-2"></i> {{ artWork.type.name }} </p>
                <i class="fas fa-pencil-alt m-2"></i> {{ artWork.tech.name }}
                <i class="fas fa-leaf m-2"></i> {{ artWork.materials.name }} </p>


            </div>
        </div>
    </div>
{% endblock %}
