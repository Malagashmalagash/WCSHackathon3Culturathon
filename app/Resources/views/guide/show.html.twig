{% extends 'base.html.twig' %}

{% block body %}
    <h1>Guide</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ guide.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ guide.name }}</td>
            </tr>
            <tr>
                <th>Coordx</th>
                <td>{{ guide.coordX }}</td>
            </tr>
            <tr>
                <th>Coordy</th>
                <td>{{ guide.coordY }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('guide_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('guide_edit', { 'id': guide.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
