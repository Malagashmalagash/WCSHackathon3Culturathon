
<nav id="navbar" class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between flex-row py-lg-0 py-sm-2">
    {% if artWork is defined %}
        <div id="drop_one" class="nav-item navbar-brand mx-auto">
            <a class="nav-link text-light" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false">
                Menu de l'oeuvre
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="#">Artiste</a>
                <a class="dropdown-item" href="#">Style</a>
                <a class="dropdown-item" href="#">Epoque</a>
            </div>
        </div>
    {% endif %}
    <div class="ml-5">
        <a class="navbar-brand nav-item text-light"
           href="#">
            {% if artWork is defined %}
                {{ artWork.date|date('Y') }} | ¨{{ artWork.name }}¨ de {{ artWork.artist }}
            {% else %}
                {%  block page_title %}
                {% endblock %}
            {% endif %}
        </a>
    </div>
