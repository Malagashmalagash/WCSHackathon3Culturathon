{% extends "base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
    {% block fos_user_content %}
        <div class="container pt-0 pt-md-3 pt-lg-5">

            <div class="formLogin">
                <p>Connexion</p>
                {% if error %}
                    <div class="alert alert-danger"
                         role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    <div class="formgroup">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fas fa-user-circle"></i></div>
                            </div>
                            <input class="form-control" type="text" id="username" name="_username"
                                   value="{{ last_username }}"
                                   required="required"/>
                        </div>
                        <div class="form-group">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-lock"></i></div>
                                </div>
                                <input class="form-control" type="password" id="password" name="_password"
                                       required="required"/>
                            </div>
                            <div class="row justify-content-center">
                                   <div class="row">
                                    <div class="col-12 mt-2">
                                        <a href="{{ path('fos_user_registration_register') }}" class="btn btn-warning">Inscription</a>

                                        <input type="submit" class="btn btn-primary" id="_submit"
                                               name="_submit"
                                               value="{{ 'security.login.submit'|trans }}"/>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    {% endblock fos_user_content %}
{% endblock %}